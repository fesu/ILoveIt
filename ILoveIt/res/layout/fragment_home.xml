<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context="com.blackfoxmedia.iloveit.HomeActivity$PlaceholderFragment" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".7"            
        android:background="@drawable/rainbownetworks430_blur" >
        
        <ImageView 
            android:id="@+id/iv_profilepic"
            android:layout_height="100dp"
            android:layout_width="150dp"
            android:layout_centerInParent="true"
            android:src="@drawable/logo134" />
        
        <TextView 
            android:id="@+id/tv_age"
            android:layout_height="wrap_content"
            android:layout_width="40dp"
            android:layout_marginRight="10dp"
            android:text="23"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_toLeftOf="@id/iv_profilepic"
            android:layout_centerInParent="true" />
        
        
        <TextView 
            android:id="@+id/tv_gender"
            android:layout_height="wrap_content"            
            android:layout_width="40dp"
            android:layout_marginRight="10dp"
            android:text="Male"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_toLeftOf="@id/iv_profilepic"
            android:layout_below="@id/tv_age"
            android:layout_centerInParent="true" />

        
        <TextView 
            android:id="@+id/tv_rank_title"
            android:layout_height="wrap_content"
            android:layout_width="40dp"
            android:layout_marginLeft="10dp"
            android:text="Rank"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_toRightOf="@id/iv_profilepic"
            android:layout_centerInParent="true" />
        
        
        <TextView 
            android:id="@+id/tv_rank"
            android:layout_height="wrap_content"            
            android:layout_width="40dp"
            android:layout_marginLeft="10dp"
            android:text="1"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_toRightOf="@id/iv_profilepic"
            android:layout_below="@id/tv_rank_title"
            android:layout_centerInParent="true" />
        
        
        <TextView 
            android:id="@+id/tv_username"
            android:layout_height="wrap_content"            
            android:layout_width="wrap_content"
            android:layout_marginBottom="10dp"            
            android:text="Username"
            android:gravity="center"
            android:textColor="@android:color/white"            
            android:layout_below="@id/iv_profilepic"
            android:layout_centerInParent="true" />
        
        <Button 
            android:id="@+id/btn_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test"
            android:gravity="center"
            android:textColor="@android:color/white"            
            android:layout_above="@id/iv_profilepic"
            android:layout_centerInParent="true"
            android:background="#50000000"
            android:visibility="invisible" />
        
        
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        >
        
        <RelativeLayout 
           	android:layout_width="match_parent"
        	android:layout_height="wrap_content"        
        	android:layout_marginTop="20dp"
        	android:background="@drawable/login_background"
        	android:layout_marginLeft="5dp"
        	android:layout_marginRight="5dp" >
            
            <TextView 
            android:id="@+id/tv_photo_title" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Photos "
            android:layout_marginBottom="5dp" />
        
        	<TextView 
            android:id="@+id/tv_photo_count" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Count"            
            android:layout_toRightOf="@id/tv_photo_title" 
            android:layout_marginBottom="5dp" />
        	
        	<GridView
        	    android:id="@+id/gv_photos"
        	    android:layout_width="match_parent"
        	    android:layout_height="100dp"
        	    android:background="@drawable/login_background"
        	    android:layout_below="@id/tv_photo_title" >
        	    
        	</GridView>
            
        </RelativeLayout>
        
        
        
    </RelativeLayout>
    

</LinearLayout>
